{% extends "base.twig" %}

{% block content %}
<div class="page-header" style="background-image: url('{{post.thumbnail.src}}');"></div>
	<div class="container page-container contact-page">
	
		<div class="row">
			<div class="col-md-3">
				<div class="sidebar">
					<h4>Over DFO</h4>
					{% include "menu-over.twig" with {'over': over.get_items} %}
				</div>
			</div>
			<div class="col-md-9">
				<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
					<section class="article-content">
						<h1 class="article-h1">{{post.title}}</h1>
						<div class="row">
							<div class="col-md-4">
								<h2>{{ post.get_field('contact_title') }}</h2>
								{{ post.get_field('contactgegevens') }}
							</div>
							<div class="col-md-7">
								{{ function('do_shortcode', '[contact-form-7 id="256" title="Neem contact met ons op"]') }}
							</div>
						</div>
						<div class="row">
							<div class="col">
								<iframe style="border: 0;" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d9788.844012746065!2d5.465621!3d52.166857!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c6461e8b92bf4b%3A0xe4d2d369c8aa107c!2sDe+Wel+14%2C+3871+MV+Hoevelaken%2C+Nederland!5e0!3m2!1snl!2sus!4v1496049926582" width="100%" height="300px" frameborder="0" allowfullscreen="allowfullscreen"></iframe>
							</div>
						</div>
						<div class="row">
							<div class="col">
								<p>{{ post.get_field('routebeschrijving') }}</p>
							</div>
						</div>
						</div>
					</section>
				</article>
			</div>
		</div>
		
	</div><!-- /content-wrapper -->
{% endblock %}