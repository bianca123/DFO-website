{% extends "base.twig" %}

{% block content %}
<div class="page-header" style="background-image: url('{{post.thumbnail.src}}');"></div>
	<div class="container page-container">
	<span class="breadcrumbs">{{ function('do_shortcode', '[wpseo_breadcrumb]') }}</span>
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<h1 class="article-h1">{{post.title}}</h1>
				<div class="article-body">
					{{post.content}}
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}