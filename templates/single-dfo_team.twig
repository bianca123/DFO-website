{% extends "base.twig" %}

{% block content %}
<div class="page-header" style="background-image: url('{{site.theme.link}}/assets/images/bg-gebouw.jpg')"></div>
	<div class="container page-container team-page">
	<span class="breadcrumbs">{{ function('do_shortcode', '[wpseo_breadcrumb]') }}</span>
		<div class="row">
			<div class="col-md-3">
				<div class="sidebar">
					<h4>Over DFO</h4>
					{% include "menu-over.twig" with {'over': over.get_items} %}
				</div>
			</div>
			<div class="col-md-9">
				<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
					<h1 class="article-h1">{{ post.title }}</h1>
					<div class="row">

						<div class="col-md-4">
							<img src="{{ post.get_field('foto_team') }}" />
						</div>

						<div class="col-md-8">
							<div class="row">
								<div class="col-md-3"><strong>Functie:</strong></div> 
								<div class="col">{{ post.get_field('functie_team') }}</div>
							</div>
							<div class="row">
								<div class="col-md-3"><strong>E-mailadres:</strong></div> 
								<div class="col"><a href="mailto:{{ post.get_field('email_team') }}">{{ post.get_field('email_team') }}</a></div>
							</div>
							<div class="row">
								<div class="col-md-3"><strong>Telefoon:</strong></div> 
								<div class="col">{{ post.get_field('telefoon_team') }}</div>
							</div>
							<p>{{post.content}}</p>
						</div>
					
					</div>
				</article>
			</div>
		</div>
		
	</div>
</div>
{% endblock %}
